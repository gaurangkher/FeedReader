    <script type="text/javascript">
        if (window.jQuery) {
            $(document).keyup(function (e) {
                if (e.keyCode === 27 && $('html').hasClass('overlay')) {
                    clearPopup();
                }
            });

            $('.popup-overlay').click(function (e) {
                var $target = $(e.target);

                if ($target.hasClass('popup-overlay')) {
                    clearPopup();
                }
            });

            $('.popup-overlay').find('.popup-exit, .popup-window__cancel').click(function () {
                clearPopup();
            });

            $('.popup-overlay').find('#corrections_submit').click(function () {
                submitForm($('.popup-overlay'));
                console.log($('#csrf').val());
            });

            $('.popup-overlay').on('keyup keydown', '#corrections_message', function(event) {
                var remaining = parseInt($(event.target).attr('maxlength')) - event.target.value.length;
                var text = "{0} characters remaining";

                $('.popup-overlay #corrections_message_limit').text(text.replace('{0}', remaining));
            });
        }
    </script>
