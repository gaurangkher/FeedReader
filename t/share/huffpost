        };

        var initDfpGlobals = function(){
            window.googletag = window.googletag || {};
            window.googletag.cmd = window.googletag.cmd || [];
            window.googletag.slots = window.googletag.slots || {};
        };

        var includeScriptAsync = function(src, protocol){
            try {
                protocol = protocol || 'https:' == document.location.protocol ? "https:" : "http:";
                var srcHasProtocol = src.match(/htt(p|ps):\/\//) && src.match(/htt(p|ps):\/\//).length;
                if (srcHasProtocol) {
                    protocol = "";
                }
                var node = document.getElementsByTagName('script')[0];
                var scr = document.createElement('script');
                scr.async = true;
                scr.type = 'text/javascript';
                scr.src = protocol + src;
                node.parentNode.insertBefore(scr, node);
            } catch (e) {
                dfpController.console.error(e.message);
            }
            return;
        };

        var initDfpTargeting = function(){
            googletag.cmd.push(function(){
                //Audience Segment Targeting
                var _auds = [];
                if(typeof(_ccaud)!='undefined') {
                    for(var i = 0; i < _ccaud.Profile.Audiences.Audience.length; i++){
                        if(i < 200){
                            _auds.push(_ccaud.Profile.Audiences.Audience[i].abbr);
                        }
                    }
                }
                //End Audience Segment Targeting

                //Contextual Targeting
                var _hdl = (document && document.title) || "";
                var _arc1 = '';
                var _hyp1 = '';
                var tags = ["@aol-amp-render","anxiety-disorders","chemistry","donald-trump","drugs","healthcare","mens-sexual-health","propecia"];
                var _article = tags.join(",");
                var _entry_id = '58936376e4b06f344e4058a6';

                var _tval = function(v) {
                    if(typeof(v)=='undefined')
                        return '';
                    if(v.length > 100)
                        return v.substr(0,100);
                    return v;
                };
                //End Contextual Targeting
                
                googletag.pubads()
                    .setTargeting('sg', _auds)
                    .setTargeting('HDL', _tval(_hdl))
                    .setTargeting('ARC1', _tval(_arc1))
                    .setTargeting('Hyp1', _tval(_hyp1))
                    .setTargeting('article', _tval(_article))
                    .setTargeting('entry_id', _entry_id);

                googletag.pubads().enableSingleRequest();
                googletag.pubads().collapseEmptyDivs();
                googletag.enableServices();
            });
        };

        // Synchronous
        initDfpSizes();
        initDfpSlots();
        initDfpGlobals();
        includeScriptAsync('https://ade.clmbtech.com/cde/ae/2658/var=_ccaud');
        includeScriptAsync('//www.googletagservices.com/tag/js/gpt.js');
        initDfpTargeting();
        
        dfpController.methods.includeScriptAsync = includeScriptAsync;

        return dfpController;
    })();
